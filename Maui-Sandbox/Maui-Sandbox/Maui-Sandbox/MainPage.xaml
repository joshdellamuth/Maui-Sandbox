<?xml version="1.0" encoding="utf-8" ?>
<!--added the namespace below clr-namespace:Maui_Sandbox.ViewModel-->
<!--Also had to associate this page with the viewmodel (DataType)-->
    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_Sandbox.MainPage"
             xmlns:viewmodel="clr-namespace:Maui_Sandbox.ViewModel"
             x:DataType="viewmodel:MainPageViewModel">

    <VerticalStackLayout VerticalOptions="End">
        <Label Text="Tasks" HorizontalOptions="Center" TextColor="Red" Margin="10"/>
        <Button x:Name="TaskButton1" Text="Task 1" Margin="10" Clicked="TaskButton1_Clicked"/>
        <Button x:Name="TaskButton2" Text="Task 2" Margin="10" Clicked="TaskButton2_Clicked"/>
        <Button x:Name="TaskButton3" Text="Task 3" Margin="10" Clicked="TaskButton2_Clicked"/>
    </VerticalStackLayout>

</ContentPage>
